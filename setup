#!/bin/bash

function makelink () {
    cwd=`dirname "${0}"`
    expr "${0}" : "/.*" > /dev/null || cwd=`(cd "${cwd}" && pwd)`
    rm -rf ${HOME}/${1}
    ln -s ${cwd}/${1} ${HOME}/
}


for dotfile in .emacs.d .gitconfig .gitignore  .hgrc  .screenrc  .vimrc  .zshrc
do
    makelink ${dotfile}
done

cwd_rel=`dirname "${myself_path}"`
cwd_abs=`cd "${cwd_rel}";pwd`
echo ". ${cwd_abs}/.bashrc" >> ~/.bashrc
